{
  "manifestVersion": 1,
  "id": "coverageChartWidget",
  "version": "1.0.48",
  "name": "Coverage Chart Widget",
    "description": "An Azure DevOps widget to display code coverage charts from selected builds.",
    "publisher": "goelhardik",
  "scopes": ["vso.build"],
  "icons": {
    "default": "static/images/logo.png"
  },
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "demands": [
    "api-version/3.0",
    "contribution/ms.vss-dashboards-web.widget-sdk-version-2"
  ],
  "tags":  [
    "build", "quality gate", "code quality"
  ],
  "files": [
    {
      "path": "dist",
      "addressable": true
    },
    {
      "path": "static/images",
      "addressable": true
    },
    {
      "path": "static/css/app.css",
      "addressable": true
    },
    {
      "path": "static/index.html",
      "addressable": true
    },
     {
      "path": "static/configuration.html",
      "addressable": true
    },
    {
      "path": "node_modules/vss-web-extension-sdk/lib",
      "addressable": true,
      "packagePath": "lib"
    }
    
  ],
  "categories": [
    "Azure Pipelines"
  ],
  "contributions": [
    {
      "id": "CoverageChartWidget",
      "type": "ms.vss-dashboards-web.widget",
      "targets": [
        "ms.vss-dashboards-web.widget-catalog",
        ".CoverageChartWidget-Configuration"
      ],
      "properties": {
        "name": "Coverage Chart Widget",
        "description": "An Azure DevOps widget to display code coverage charts from selected builds.",
        "uri": "static/index.html",
        "isNameConfigurable": true,
        "catalogIconUrl:": "static/images/logo.png",
        "previewImageUrl": "static/images/logo.png",
        "supportedSizes": [
            {
                "rowSpan": 2,
                "columnSpan": 2
            },
            {
                "rowSpan": 1,
                "columnSpan": 1
            },   
            {
                "rowSpan": 1,
                "columnSpan": 2
            },   
            {
                "rowSpan": 2,
                "columnSpan": 3
            },
            {
                "rowSpan":2,
                "columnSpan": 4
            },
            {
                "rowSpan": 3,
                "columnSpan": 2
            },
            {
                "rowSpan": 3,
                "columnSpan": 3
            },
            {
                "rowSpan":3,
                "columnSpan": 4
            }
        ],
        "supportedScopes": [
          "project_team"
        ]
      }
    },
    {
      "id": "CoverageChartWidget-Configuration",
      "type": "ms.vss-dashboards-web.widget-configuration",
      "targets": [
        "ms.vss-dashboards-web.widget-configuration"
      ],
      "properties": {
        "name": "CoverageChartWidget Configuration",
        "description": "Configures CoverageChartWidget to show code coverage from builds",
        "uri": "static/configuration.html"
      }
    }
  ]
}