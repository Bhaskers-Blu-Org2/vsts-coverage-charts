{
  "manifestVersion": 1,
  "id": "vsts-coverage-charts",
  "version": "1.1.9",
  "name": "Code Coverage Charts",
  "description": "An Azure DevOps widget to display code coverage charts from selected builds.",
  "publisher": "ms-1es",
  "scopes": [
    "vso.build",
    "vso.extension.default",
    "vso.test"
  ],
  "icons": {
    "default": "static/images/logo.png"
  },
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "demands": [
    "api-version/3.0",
    "contribution/ms.vss-dashboards-web.widget-sdk-version-2"
  ],
  "tags": [
    "build",
    "quality gate",
    "code quality"
  ],
  "content": {
    "details": {
      "path": "README.md"
    }
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/Microsoft/vsts-coverage-charts"
  },
  "files": [
    {
      "path": "dist",
      "addressable": true
    },
    {
      "path": "static/images",
      "addressable": true
    },
    {
      "path": "static/css/app.css",
      "addressable": true
    },
    {
      "path": "static/index.html",
      "addressable": true
    },
    {
      "path": "static/configuration.html",
      "addressable": true
    },
    {
      "path": "node_modules/vss-web-extension-sdk/lib",
      "addressable": true,
      "packagePath": "lib"
    }
  ],
  "categories": [
    "Azure Pipelines"
  ],
  "contributions": [
    {
      "id": "CodeCoverageCharts",
      "type": "ms.vss-dashboards-web.widget",
      "targets": [
        "ms.vss-dashboards-web.widget-catalog",
        ".CodeCoverageCharts-Configuration"
      ],
      "properties": {
        "name": "Code Coverage Charts",
        "description": "An Azure DevOps widget to display code coverage charts from selected builds.",
        "uri": "static/index.html",
        "isNameConfigurable": true,
        "catalogIconUrl:": "static/images/logo.png",
        "previewImageUrl": "static/images/logo.png",
        "supportedSizes": [
          {
            "rowSpan": 2,
            "columnSpan": 2
          },
          {
            "rowSpan": 2,
            "columnSpan": 3
          },
          {
            "rowSpan": 2,
            "columnSpan": 4
          },
          {
            "rowSpan": 3,
            "columnSpan": 2
          },
          {
            "rowSpan": 3,
            "columnSpan": 3
          },
          {
            "rowSpan": 3,
            "columnSpan": 4
          },
          {
            "rowSpan": 4,
            "columnSpan": 4
          },
          {
            "rowSpan": 5,
            "columnSpan": 4
          },
          {
            "rowSpan": 6,
            "columnSpan": 4
          }
        ],
        "supportedScopes": [
          "project_team"
        ]
      }
    },
    {
      "id": "CodeCoverageCharts-Configuration",
      "type": "ms.vss-dashboards-web.widget-configuration",
      "targets": [
        "ms.vss-dashboards-web.widget-configuration"
      ],
      "properties": {
        "name": "CodeCoverageCharts Configuration",
        "description": "Configures CodeCoverageCharts to show code coverage from builds",
        "uri": "static/configuration.html"
      }
    }
  ]
}