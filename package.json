{
  "name": "analytics-example-widget",
  "version": "1.0.0",
  "description": "Widget extension using VSTS Analytics and Charts with React and Typescript",
  "repository": "https://github.com/Microsoft/vsts-extension-samples",
  "license": "MIT",
  "dependencies": {
    "react": "^15.6.2",
    "react-dom": "^15.6.1",
    "tfx-cli": "^0.6.4",
    "typescript": "^2.6.1",
    "vss-web-extension-sdk": "^4.125.2"
  },
  "scripts": {
    "build": "tsc -p .",
    "postbuild": "npm run extension-build",
    "extension-build": "tfx extension create --manifest-globs vss-extension.json --rev-version",
    "lint": "tslint -p tsconfig.json -t stylish",
    "clean": "rimraf ./dist && rimraf ./*.vsix"
  },
  "devDependencies": {
    "tslint": "^5.12.0",
    "tslint-microsoft-contrib": "^6.0.0",
    "tslint-react": "^3.6.0"
  }
